<h3>Order items:</h3>
  
  <% order_cost = 0.0 %>
  
  <% orderitems = Orderitem.where(:order_id => order.id) %>
  
  <% orderitems.each do |orderitem| %>
    
    <% book_id = orderitem.book_id %> <!--change to product?-->
    <% book = Book.find_by(:id => book_id) %>
    <% order_item_price = book.price * orderitem.quantity %>
    <% order_cost += order_item_price %>
    
    <p> 
      <strong>Book:</strong> <!--change to product?-->
      <%= book.title %>
    </p>
    
    <p>
      <strong>Quantity:</strong>
      <%= orderitem.quantity %>
    </p>
    
    <p>
      <strong>Order item Cost:</strong>
      <%= order_item_price %>
    </p>
  
  <% end %>
  
  <p>
    <strong>Order Cost:</strong>
    <%= order_cost %>
  </p>

<% end %>




